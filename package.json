{
    "version": "1.0.0",
    "devDependencies": {
        "standard-version": "*"
    },
    "standard-version": {
        "tagPrefix": ""
    },
    "scripts": {
        "version:first-release": "standard-version -f",
        "version:major": "standard-version -r major",
        "version:minor": "standard-version -r minor",
        "version:patch": "standard-version",
        "release": "git push --follow-tags"
    }
}
